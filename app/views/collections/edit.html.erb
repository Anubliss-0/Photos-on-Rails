<h1>Edit Album Title or Description</h1>
<%= simple_form_for @collection do |f| %>
  <%= f.input :name %>
   <%= f.input :description %>
  <%= f.input :cover, collection: @cover %>
  <%= f.button :submit, "Update" %>
<% end %>

<%= turbo_frame_tag "show_photos" do %>
  <%= link_to "Add photo", photos_path(params[:id]), data: { turbo_frame: "show_photos" } %>
<% end %>


<h2>Edit photos</h2>
<% @collection.photos.each do |photo| %>
  <%= photo.title %>
  <%= cl_image_tag photo.photo.key, height: 60, width: 60 %>
  <%= link_to "Edit", edit_photo_path(photo.id) %>
  <%= link_to "Remove", bookmark_path(photo.bookmark_ids), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>
