<h1>Edit Album Title or Description</h1>
<% @collection = Collection.find(params[:id]) %>
<%= simple_form_for @collection do |f| %>
  <%= f.input :name %>
   <%= f.input :description %>
  <%= f.button :submit, "Update" %>
<% end %>

<h2>Remove image from collection</h2>
<% @collection.photos.each do |photo| %>
  <%= photo.title %>
  <%= cl_image_tag photo.photo.key, height: 60, width: 60 %>

  <%= link_to "Remove", bookmark_path(photo.bookmark_ids), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>
