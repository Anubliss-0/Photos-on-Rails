<h1>All photos</h1>
<% @photos.each do |photo| %>
  <div>
    <%= cl_image_tag photo.photo.key, height: 300, width: 400, crop: :fill %>
    <%= photo.description %>
    <%= photo.film %>
    <%= photo.camera %>
    <%= link_to "Edit information", edit_photo_path(photo[:id]) %>
  </div>
<% end %>


<%= turbo_frame_tag "show_photos" do %>
  <% @photos.each do |photo| %>
    <div>
      <%= cl_image_tag photo.photo.key, height: 100, width: 100, crop: :fill %>
      <span>
        <%= @collection_id = params[:format] %>
        <%= @photo_id = photo.id %>
        <%= link_to "Add to collection", new_bookmark_path(collection_id: @collection_id,  photo_id: @photo_id) %>
      </span>
    </div>
  <% end %>
<% end %>
