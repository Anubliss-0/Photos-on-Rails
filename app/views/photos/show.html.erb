<div class="photo-show-container">
  <%= cl_image_tag @photo.photo.key %>
  <div class="photo-show-card">
    <h1><%= @photo.title %></h1>
    <h3><%= @photo.description %></h3>
    <p><%= @photo.film %></p>
    <p><%= @photo.camera %></p>
    <%= link_to "Delete Photo", photo_path(@photo), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} if policy(@photo).destroy?  %>
    <%= link_to "Edit information", edit_photo_path(@photo) %>
  </div>
</div>
